<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_window_focused="false">
        <shape>
            <solid android:color="@color/btn_enabled" />
            <stroke android:width="1px" android:color="@color/btn_enabled_edge" />
            <corners android:radius="1px" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_window_focused="false">
        <shape>
            <solid android:color="@color/btn_disabled" />
            <stroke android:width="1px" android:color="@color/btn_disabled_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_pressed" />
            <stroke android:width="2px" android:color="@color/btn_pressed_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape>
            <solid android:color="@color/btn_pressed" />
            <stroke android:width="2px" android:color="@color/btn_focused_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/btn_enabled" />
            <stroke android:width="1px" android:color="@color/btn_enabled_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/btn_disabled_focused" />
            <stroke android:width="1px" android:color="@color/btn_disabled_focused_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_disabled" />
            <stroke android:width="1px" android:color="@color/btn_disabled_edge" />
            <corners android:radius="1px" />
        </shape>    
    </item>
    
</selector>