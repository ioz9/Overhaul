<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:minWidth">54dip</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <declare-styleable name="PagerHeader">
        <attr name="activeTextColor" format="color" />
        <attr name="inactiveTextColor" format="color" />
        <attr name="tabColor" format="color" />
        <attr name="tabHeight" format="dimension" />
        <attr name="tabPadding" format="dimension" />
        <attr name="paddingPush" format="dimension" />
        <attr name="fadingEdgeLength" format="dimension" />
        <attr name="fadingEdgeColorHint" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="showTopShadow" format="boolean" />
        <attr name="showBottomBar" format="boolean" />
        <attr name="showTab" format="boolean" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="shadowHeight" format="dimension" />
    </declare-styleable>

</resources>